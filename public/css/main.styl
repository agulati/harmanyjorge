@font-face
  font-family 'LaBelle'
  src url('/fonts/LaBelleAurore.ttf') format('truetype')
  font-weight normal
  font-style normal

color-white = #fff
color-light-gray = #ccc
color-red = #F7977A
color-red-orange  = #F9AD81
color-yellow-orange = #FDC68A
color-yellow = #FFF79A
color-pea-green = #C4DF9B
color-yellow-green = #A2D39C
color-green = #82CA9D
color-green-cyan = #7BCDC8
color-cyan = #6ECFF6
color-cyan-blue = #7EA7D8
color-blue = #8493CA
color-blue-violet = #8882BE
color-violet = #A187BE
color-violet-magenta = #BC8DBF
color-magenta = #F49AC2
color-magenta-red = #F6989D

body
  margin 0
  background-color #fff
  color color-red
  font-family LaBelle

h1
  margin-bottom 20px
  font-family LaBelle !important
  font-size 50px

.hide
  display none

.lead
  font-size 30px

.btn
  font-size 18px
  font-family Cambria

.main
  width 60%
  margin auto
  text-align center
  padding-bottom 50px

  &.view
    width 80%

.green-cyan
  color color-green-cyan

.cyan-blue
  color color-cyan-blue

.button-green-cyan
  background-color color-green-cyan
  border-color color-green-cyan

.buttons
  border-top 1px solid #ccc
  margin-top 15px
  padding-top 15px

.btn-disabled
  background-color #666
  border-color #333
  cursor default
  &:hover
    background-color #666
    color #ccc

form
  text-align left

.file-input
  margin-top 75px
  margin-bottom 20px

ul
  list-style none
  padding-left 0
  display none
  font-family Cambria
  font-size 24px

li
  padding 5px

textarea
  color color-violet
  font-size 16px
  padding 5px
  line-height 24px
  width 100%

  &.disabled
    background-color #eee

span.delete-button
  display inline-block
  padding-right 15px
  font-size 12px
  cursor pointer

  img
    padding-bottom 10px

#book
  box-shadow 2px 2px 5px #999
  margin auto

  .cover
    background-color #f8f8f8
    border-left 1px solid #888

    h1
      font-weight bold
      font-family LaBelle
      line-height 125px
      color color-red

  .data
    line-height 250px

    img
      cursor pointer

#controls
  font-size 30px

  input
    color color-violet
    padding-left 15px

div.caption
  line-height 25px
  font-size 22px
  width 350px
  text-align left
  padding-left 75px
  overflow-y scroll
  height 125px

#overlay
  width 100%
  height 100%
  z-index 999
  background-color #777775
  position fixed
  top 0
  left 0
  padding 50px 0

  #overlay-image
    width 800px
    margin auto
    overflow-x scroll

    img
      display block
      margin auto
      cursor pointer
